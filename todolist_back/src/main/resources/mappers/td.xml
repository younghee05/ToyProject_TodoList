<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.toyproject.todolist.repository.TodoMapper">
    <insert id="save" parameterType="com.toyproject.todolist.entity.Todo">
        insert into
        todolist_tb
        values(0, #{content}, #{status}, #{date})
    </insert>
    <select id="findTodoList" resultType="com.toyproject.todolist.entity.Todo">
        select
            todoId,
            content,
            status
        from
            todolist_tb
        where
            date like concat("%", #{date}, "%")
    </select>

    <delete id="delete" parameterType="int">
        delete
        from
            todolist_tb
        where
            todoId = #{todoId}
    </delete>

    <update id="updateStatus" parameterType="int">
        update
        todolist_tb
        set
        status = not status
        where
        todoId = #{todoId}

    </update>

    <update id="updateTodoContent" parameterType="com.toyproject.todolist.entity.Todo">
        update
            todolist_tb
        set
            content = #{content}
        where
            todoId = #{todoId}
    </update>

    <select id="getTodo" resultType="java.lang.String">
        select
            content
        from
            todolist_tb
        where
            todoId = #{todoId}
    </select>
</mapper>